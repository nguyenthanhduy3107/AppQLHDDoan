@model Mode.vipham

@{
    ViewBag.Title = "Create";
    Layout = "~/Areas/Admin/Views/Shared/Layout.cshtml";
}

<h2>Tạo</h2>

@using (Html.BeginForm("Create", "Vipham", FormMethod.Post,
                new
                {
                    @class = "form-horizontal",
