                @Html.EditorFor(model => model.sobienban, null, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.sobienban, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            @Html.Label("madv", htmlAttributes: new { @class = "control-label col-md-2" })
